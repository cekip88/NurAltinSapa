extends template/main
append vars
	-
		page_title = 'Главная'
block content
	main
		section.slider
			.slider-cont
				.slide.slide-1
					.slide-bgc
						+img('main-bgc-1.jpg')
					.section
						.slide-left
							h2.slide-title Ремонт
							span.slide-subtitle квартир под ключ по европейским стандартам
							button.slide-btn.btn Заказать проект
						ul.slide-right
							li
								include ../img/plus.svg
								span Работаем по Казахстану с 1992 года
							li
								include ../img/plus.svg
								span Сертифицированные специалисты
							li
								include ../img/plus.svg
								span Гарантия на работу 10 лет
						span.slide-watermark NurAltynSapa.kz
		section.projects
			.section.posr
				h2.block-title.projects-title Наши актуальные проекты
				span.block-subtitle.projects-subtitle Наши проекты
				ul.projects-descpritions
					li.project-descprition.active
						h5.project-descprition-title Ремонт "Эконом"
						p.project-descprition-paragraph
							span Краткое описание:
							span Идейные соображения высшего порядка.
					li.project-descprition
						h5.project-descprition-title Загородный дом "Гнездо"
						p.project-descprition-paragraph
							span Слайд 2:
							span Идейные соображения высшего порядка.
					li.project-descprition
						h5.project-descprition-title Ремонт "Стандарт"
						p.project-descprition-paragraph
							span Слайд 3:
							span Идейные соображения высшего порядка.
				.projects-slider
					ul.projects-cont
						li.project
							.project-slide-photo
								+img('slide-1.jpg')
							h6.project-slide-title Ремонт "Стандарт"
					.projects-control
						button.projects-control-btn.active
						button.projects-control-btn
						button.projects-control-btn
					.projects-arrows
						button.projects-arrows-prev
							include ../img/arrow-left.svg
						button.projects-arrows-next
							include ../img/arrow-right.svg
		section.calc
			.section.posr
				h2.block-title.calc-title Форма расчета
				span.block-subtitle.calc-subtitle Форма расчета
				form.calc-form
					.calc-page
						p.calc-desc Чтобы рассчитать стоимость ремонта — выберите интересующие вас пункты, а в конце нажмите кнопку "Рассчитать стоимость", и получите готовый, но приблизительный расчет и подготовленного специалиста для выезда.
						.calc-inpt
							span Тип ремонта
							.calc-select-buttons
								input(type='hidden')
								button(data-value='economy')
									include ../img/calc-arrow.svg
									span Эконом
								button(data-value='standard').active
									include ../img/calc-arrow.svg
									span Стандарт
								button(data-value='premium')
									include ../img/calc-arrow.svg
									span Премиум
						button.calc-continue.btn Далее
					.calc-page
						.calc-col
							.calc-inpt
								span Укажите площадь
								input(placeholder='Площадь ремонта М2')
							.calc-inpt
								span Высота потолков
								input(placeholder='М')
							.calc-inpt
								span Вид помещения
								input(placeholder='Новостройка или офис')
						.calc-col
							.calc-inpt
								span Демонтаж
								input(placeholder='100%')
							.calc-inpt
								span Стены
								input(placeholder='Обои под покраску')
							.calc-inpt
								span Полы
								input(placeholder='Ламинат')
						.calc-inpt
							span Краткое описание
							textarea(placeholder='Хочу не дорого, но богато')
						button.calc-continue.btn Далее
					.calc-page
						.calc-col
							.calc-inpt
								span Ф.И.О.
								input
							.calc-inpt
								span Адрес
								input
						.calc-col
							.calc-inpt
								span Контактный номер
								input
							.calc-inpt
								span E-mail
								input
						button.calc-continue.btn Отправить






















